<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthLinker"
        tools:targetApi="31">
        <activity
            android:name=".PatientOtpVerificationActivity"
            android:exported="false"
            android:label="@string/title_activity_patient_otp_verification"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".PatientHomeAvtivity"
            android:exported="false"
            android:label="@string/title_activity_patient_home_avtivity"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".DoctorHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_doctor_home"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".OtpVerificationActivity"
            android:exported="true"
            android:label="@string/title_activity_otp_verification"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".PatientRegistrationActivity"
            android:exported="true"
            android:label="@string/title_activity_patient_registration"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".DoctorRegistrationByEmailActivity"
            android:exported="true"
            android:label="@string/title_activity_doctor_registration"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".PatientLoginActivity"
            android:exported="true"
            android:label="@string/title_activity_patient_login"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".DoctorLoginActivity"
            android:exported="true"
            android:label="@string/title_activity_doctor_login"
            android:theme="@style/Theme.HealthLinker" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthLinker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>